
<%- include ../partials/header.ejs %>
<%- include ../partials/nav_bar.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="titleTextField">Task Name</label>
                        <input type="text" class="form-control" id="titleTextField" placeholder="Enter Task Name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="categorySelect">Category</label>
                        <select id="categorySelect" class="form-control">
                            <option selected>Choose...</option>
                            <option>Homework</option>
                            <option>Project</option>
                            <option>Study</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="dueDatePicker">Due Date</label>
                        <input type="date" class="form-control" id="dueDatePicker">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="prioritySelect">Priority</label>
                        <select id="prioritySelect" class="form-control">
                            <option selected>Choose...</option>
                            <option>High</option>
                            <option>Medium</option>
                            <option>Low</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/footer.ejs %>
